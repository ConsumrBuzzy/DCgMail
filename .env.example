# ============================================================================
# DCGMail Configuration Template
# ============================================================================
# Copy this to .env and fill in YOUR values.
# NEVER commit .env (it's in .gitignore).

# Gmail Service Account credentials file path
# Download from Google Cloud Console
GMAIL_SERVICE_ACCOUNT=./credentials/service_account.json

# Telegram Bot Token
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Your work email address
WORK_EMAIL=your.work.email@company.com

# Your Telegram Chat ID (optional, for direct messages)
# Get from @userinfobot on Telegram
TELEGRAM_CHAT_ID=123456789

# Categories configuration file
CATEGORIZATION_CONFIG=./config/categories.json

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum emails to fetch per run
MAX_EMAILS=50

# Enable dry-run mode (fetch but don't send Telegram)
DRY_RUN=false
